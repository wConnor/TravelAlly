@model TravelAlly.Models.Station

@{
	ViewData["Title"] = "Station Details";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
	<h4>Station</h4>
	<hr />
	<dl class="row">
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Name)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Name)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.AcceptsTypes)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.AcceptsTypes)
		</dd>
		<dt class="col-sm-2">
			Coordinates (lat, lon)
		</dt>
		<dd class="col-sm-10">
			{ @Html.DisplayFor(model => model.Lat) , @Html.DisplayFor(model => model.Lon) }
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.City)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.City.Name)
		</dd>
	</dl>
</div>
<div>
	<a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
	<a asp-action="Index">Back to List</a>
</div>
